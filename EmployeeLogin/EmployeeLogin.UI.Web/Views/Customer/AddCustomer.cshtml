@model EmployeeLogin.DAL.Customer


@{
    ViewBag.Title = "AddCustomer";
    Layout = "~/Views/Shared/_LayoutPageHome.cshtml";
}

<link href="//netdna.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-2.1.3.min.js"></script>
<link href="~/Content/css/AddCustomer.css" rel="stylesheet" />
<script src="~/Content/js/AddCustomer.js"></script>

<!------ Include the above in your HEAD tag ---------->
<div class="content-wrapper">
    @using (Html.BeginForm("SaveCustomer", "Customer", FormMethod.Post))
    {
        <form class="form-horizontal" role="form" >
            <h2>NEW CUSTOMER</h2>
            <div class="form-group">
                <label for="firstName" class="col-sm-3 control-label">First Name</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.Adı, new { @class = "form-control", placeholder = "First Name" })
                </div>
            </div>
            <div class="form-group">
                <label for="lastName" class="col-sm-3 control-label">Last Name</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.Soyadı, new { @class = "form-control", placeholder = "Last Name" })
                </div>
            </div>
            <div class="form-group">
                <label for="birthDate" class="col-sm-3 control-label">Date of Birth</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.Doğumtarihi, new { type = "date" })
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Phone Number(1)</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.Telno, new { @class = "form-control", placeholder = "Phone Number(1)" })
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Phone Number(2)</label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.Telno2, new { @class = "form-control", placeholder = "Phone Number(2)" })
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">Email(1) </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Email(1)" })
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">Email(2) </label>
                <div class="col-sm-9">
                    @Html.TextBoxFor(x => x.Email2, new { @class = "form-control", placeholder = "Email(2)" })
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">Email(1) </label>
                <div class="col-sm-9">
                    @Html.TextAreaFor(x => x.Adress, new { @class = "form-control", placeholder = "Adres Line(1)" })
                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">Email(2) </label>
                <div class="col-sm-9">
                    @Html.TextAreaFor(x => x.Adress2, new { @class = "form-control", placeholder = "Adres Line(2)" })
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary btn-block">SAVE CUSTOMER</button>
            <br />
        </form> <!-- /form -->
    }
</div> <!-- ./container -->
